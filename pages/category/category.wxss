page {
    height: 100%;
}

.page {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.under_line {
    width: 100%;
    border-top: 1rpx solid #efefef;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.body {
    margin-top: 100rpx;
    display: flex;
    width: 100%;
    height: 100%;
}

/* 滚动条 */
.scrollY {
    width: 150rpx;
    background-color: #fff;
    box-shadow: 5rpx 0rpx #ddd;
    height: 100%;
}

/* 搜索框 */
.search {
    height: 100rpx;
    width: 95%;
    background: #fff;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    position: fixed;
    z-index: 99;
    padding: 0rpx;
    margin-left: 20rpx;
}

.search .input {
    width: 100%;
    height: 80rpx;
    background: #eee;
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search .icon {
    width: 30rpx;
    height: 30rpx;
}

.search .txt {
    height: 42rpx;
    line-height: 42rpx;
    color: rgb(175, 171, 171);
    padding-left: 10rpx;
    font-size: 28rpx;
}

.left {
    height: 100%;
    float: left;
    border-right: 1rpx solid #efefef;
}

.right {
    height: 100%;
}

.text-style {
    width: 150rpx;
    height: 100rpx;
    line-height: 150rpx;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold;
    color: rgb(168, 167, 167);
}

.active1 {
    font-weight: bold;
    color: #06A17f;
}

.activeView {
    background: #FFF;
}

.active {
    display: block;
    width: 50rpx;
    height: 6rpx;
    background: #06A17f;
    position: relative;
    left: 75rpx;
    bottom: 30rpx;
}

.caidan{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-left: 20rpx;
}
.title {
    margin-top: 10rpx;
    margin-left: 6rpx;
    font-size: 28rpx;
    height: 50rpx;
    width: 480rpx;
    border-radius: 15rpx;
    color: #c2c2c2;
    text-align: center;
    padding-left: 20rpx;
}

/* 商品样式 */
.orders {
    margin-top: 20rpx;
    height: 330rpx;
    flex: 1;
    /*设置最小宽度，才会让元素排不下，导致换行排列*/
    min-width: calc((100% - 10px) / 2);
}

.orderList {
    height: 330rpx;
    border-bottom: 1rpx solid #F0F0F0;
    flex: 1;
    /*设置最小宽度，才会让元素排不下，导致换行排列*/
    min-width: calc((100% - 10px) / 2);
}

