page {
    min-height: 100%;
    background-color: #f8f8f8;
}

.container {
    min-height: 100%;
    background: #f8f8f8;
    overflow-x: hidden;
    padding: 30rpx;
}

.edit-content {
    background: #fff;
    width: 100%;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    box-shadow: 2rpx 8rpx 18rpx #f1f1f1;
}

.item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 30rpx;
}

.item .icon {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-right: 20rpx;
}

.item .icon .img {
    width: 36rpx;
    height: 36rpx;
}

.item .input-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 30rpx 30rpx 30rpx 0;
    border-bottom: 1rpx solid #f1f1f1;
}

.item:last-child .input-wrapper {
    border-bottom: none;
}

.item .input-wrapper .a-input {
    font-size: 28rpx;
    width: 100%;
}

.item .input-wrapper .arrow {
    width: 10rpx;
    height: 10rpx;
    border-top: 4rpx solid #aaa;
    border-right: 4rpx solid #aaa;
    transform: rotate(45deg);
}

.a-input {
    font-size: 28rpx;
    width: 100%;
}

.confirm-box {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: linear-gradient(to right, #ee4b31, #b81e06);
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 32rpx;
}

.default-input {
    font-size: 28rpx;
    color: #233445;
    line-height: 60rpx;
    margin: 0 auto;
    width: 300rpx;
}

.location-select {
    width: 100%;
    height: 600rpx;
    background: #fff;
    position: fixed;
    z-index: 10;
    left: 0;
    bottom: 0;
}

.location-select .hd {
    height: 108rpx;
    width: 100%;
    border-bottom: 1px solid #f4f4f4;
    padding: 46rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}

.location-select .location-selected {
    float: left;
    height: 60rpx;
    display: flex;
}

.location-select .location-selected .item {
    max-width: 140rpx;
    margin-right: 30rpx;
    text-align: left;
    line-height: 60rpx;
    height: 100%;
    color: #333;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.location-select .location-selected .item.disabled {
    color: #999;
}

.location-select .location-selected .item.selected {
    color: #ee4b31;
}

.location-select .done {
    float: right;
    height: 60rpx;
    width: 60rpx;
    border: none;
    background: #fff;
    line-height: 60rpx;
    text-align: center;
    color: #ee4b31;
    font-size: 28rpx;
}

.location-select .done.disabled {
    color: #999;
}

.location-select .bd {
    height: 492rpx;
    width: 100%;
    padding: 0 30rpx;
}

.location-select .region-list {
    height: 492rpx;
}

.location-select .region-list .item {
    width: 100%;
    height: 104rpx;
    line-height: 104rpx;
    text-align: left;
    color: #333;
    font-size: 28rpx;
}

.location-select .region-list .item.selected {
    color: #ee4b31;
}

.bg-mask {
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 18;
}

.default{
    background: #fff;
    width: 100%;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    box-shadow: 2rpx 8rpx 18rpx #f1f1f1;
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.default .text{
    font-size: 32rpx;
}

.btn-wrapper {
    width: 100%;
    padding: 24rpx 0;
    box-sizing: border-box;
}

.btn-wrapper .btn {
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
    width: 100%;
    color: #fff;
    background: #bbb;
    box-shadow: 0rpx 10rpx 20rpx #ccc;
}

.btn-wrapper .btn.active {
    background: linear-gradient(to right, #ee4b31, #b81e06);
    box-shadow: 0rpx 10rpx 20rpx #f1f1f1;
    color: #fff;
}

.delete {
    width: 100%;
    padding: 24rpx;
    box-sizing: border-box;
}

.delete .btn {
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
    width: 690rpx;
    margin-left: -20rpx;
    background: linear-gradient(to right, #b3aeae, #807d7c);
    box-shadow: 0rpx 10rpx 20rpx #f1f1f1;
}
