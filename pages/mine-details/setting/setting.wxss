  margin-top: 30rpx;
}

.btn-wrap{
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  width: 100%;
  height: 100rpx;
  border-radius: 10rpx;
  z-index: 10;
}
.jiantou{
  width: 50rpx;
  height: 50rpx;
