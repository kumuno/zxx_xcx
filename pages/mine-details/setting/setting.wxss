.btn{
  background: linear-gradient(to right, #0eb490, #2e9255);
  box-shadow: 0rpx 10rpx 20rpx #f1f1f1;
  color: #fff;
  padding: 15rpx 32rpx;
  text-align: center;
  text-decoration: none; 
  width: 700rpx;
  height: 100rpx;
  display:block;
