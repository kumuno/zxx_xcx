}
.active{
  background: linear-gradient(to right, #0eb490, #2e9255);
  box-shadow: 0rpx 10rpx 20rpx #f1f1f1;
  color: #fff;
}

.disable{
  background: #bbb;
  box-shadow: 0rpx 10rpx 20rpx #ccc;
}

.tips{
